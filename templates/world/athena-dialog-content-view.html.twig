<div class="athena-doc-listing">
    <h4>{{ data.title }}</h4>
    {% if(data.mode == 'teaser') %}
        {% set text = data.body|render|striptags %}
    <div class="body">
        {{ text|length > 50 ? text|slice(0, 50)|raw ~ '...' : text|raw }}
    </div>
    {% endif %}
</div>


{% if(data.mode == 'teaser2') %}
    <div class="body">
        {{ data.body|raw }}
    </div>
    <div class="images">
        {{ data.images }}
    </div>
{% endif %}
